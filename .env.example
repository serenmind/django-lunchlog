# Copy this file to `.env` and edit values for your environment.

# Postgres settings (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lunchlog
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Django settings
DJANGO_SECRET_KEY=replace-me
DEBUG=1

# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=lunchlog-dev-bucket
AWS_S3_REGION_NAME=eu-central-1

# Celery / Redis (defaults to redis service in docker-compose)
# Optional: override with a full broker url, e.g. redis://redis:6379/0 or amqp://user:pass@host:5672//
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Google Places API
GOOGLE_PLACES_API_KEY=your-google-places-api-key